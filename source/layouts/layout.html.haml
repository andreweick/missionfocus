!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Mission Focus
    %meta{content: "width=device-width", name: "viewport"}/
    %link{href: "/favicon.ico?v=3", rel: "shortcut icon", type: "image/x-icon"}/

    = stylesheet_link_tag "http://code.jquery.com/mobile/1.4.0/jquery.mobile-1.4.0.min.css", media: "all"
    = stylesheet_link_tag "application", media: "all"

    = javascript_include_tag "application"
    = javascript_include_tag "//use.typekit.net/any6lbn.js"
    :javascript
      try{Typekit.load();}catch(e){}

  %body
    %div{"data-role" => "page"}
      #slidemenupanel{data: {display: "push", position: "left", role: "panel"}}
        %ul
          %li= link_to "Home", "/"
          %li= link_to "Blog", "/blog.html"
          %li.desktop--none= link_to "Directions", "/dir.html"
          %li= link_to "Contact Us", "/#contact"
          %li= link_to "Careers", "/careers.html"
          %li= link_to "Press", "/press.html"
      / Jquery Mobile wrapper
      %div{data: {role: "content"}}

        / Mobile navigation
        = link_to "#slidemenupanel" do
          #slidemenu.nav--logo

        / Page content
        = yield

        / Footer
        .dir--desktop
          = link_to "100 Daingerfield Road, Suite 400, Alexandria, VA 22314", "https://goo.gl/maps/7Wegk"
          %em |
          Phone: 703.291.6720
          %em |
          Fax: 703.763.726
