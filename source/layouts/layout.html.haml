!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Mission Focus
    %meta{content: "width=device-width", name: "viewport"}/
    %link{href: "/favicon.ico?v=3", rel: "shortcut icon", type: "image/x-icon"}/

    = javascript_include_tag "//use.typekit.net/any6lbn.js"
    :javascript
      try{Typekit.load();}catch(e){}

    = stylesheet_link_tag "http://code.jquery.com/mobile/1.4.0/jquery.mobile-1.4.0.min.css", media: "all"
    = stylesheet_link_tag "application", media: "all"
  %body
    %div{"data-role" => "page"}
      #slidemenupanel{"data-display" => "push", "data-position" => "left", "data-role" => "panel"}
        %ul
          %li= link_to "Home", "/"
          %li= link_to "Blog", "/blog"
          %li= link_to "Directions", "/dir", class: "desktop--none"
          %li= link_to "Contact Us", "/contact"
          %li= link_to "Careers", "/careers"
          %li= link_to "Press", "/press"
      / Jquery Mobile wrapper
      %div{"data-role" => "content"}
        / Mobile navigation
        %a{href: "#slidemenupanel"}
          #slidemenu.nav--logo
        / Header
        .index--header{"data-speed" => "8", "data-type" => "background"}
          .index--company-name Mission Focus
          %p.index--tagline Large-scale solutions for today's warfighter
          %section.nav--index-header
            %a.nav--index-header-anchors.active{href: "/index.html#blog"} Blog
            %a.nav--index-header-anchors{href: "/index.html#dir"} Directions
            %a.nav--index-header-anchors{href: "/index.html#contact"} Contact
        / Page content

    = yield

    / Javascript files
    = javascript_include_tag "picturefill", "parallax", "waypoints.min", "inits"
    = javascript_include_tag "http://code.jquery.com/jquery-1.9.1.min.js"
    = javascript_include_tag "http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.js"
