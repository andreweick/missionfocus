- wrap_layout :layout do
  .post--header{style: "background-image: url('/images/posts/#{current_page.data.header}')"}
    %svg.post--svg{"enable-background" => "new 0 0 300 300", version: "1.1", viewbox: "0 0 300 300", x: "0px", "xml:space" => "preserve", y: "0px"}
      %g
        %clippath#circle
          %circle{cx: "150", cy: "150", r: "149.557"}
      %image{"clip-path" => "url(#circle)", height: "100%", width: "100%", "xlink:href" => "/images/team/#{current_page.data.img}"}
    .post--title
      .post--company-name= current_page.data.title
      %p.post--tagline= current_page.data.author + " | " + current_page.date.strftime("%B %-d, %Y")

  .col-md-6.col-md-offset-3.col-sm-12.col-xs-12
    .page--container= yield
